datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Transaction {
  id                 Int       @id @default(autoincrement())
  transaction_method String
  execution_date     String
  sender             String
  reciever           String
  IBAN               String?
  reference          String
  amount             Float
  transaction        Category? @relation(fields: [transactionId], references: [id])
  transactionId      Int?
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String
  description  String?
  transactions Transaction[]
}
